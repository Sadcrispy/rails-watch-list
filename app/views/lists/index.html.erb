<h1>Lists</h1>
<div class="container">
  <ul>
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <li>
          <%= list.name %>
        </li>
      <% end %>
      <%= link_to 'DELETE', list_path(list), data: {turbo_method: :delete, turbo_confirm: "Do you want to delete that list?"} %>
    <% end %>
  </ul>
  <%= render "form" %>
</div>
